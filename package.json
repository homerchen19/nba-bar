{
  "name": "nba-bar",
  "description": "The best NBA menubar App",
  "license": "MIT",
  "author": "xxhomey19 <xxhomey19@gmail.com> (https://github.com/xxhomey19)",
  "repository": "https://github.com/xxhomey19/nba-bar",
  "bugs": {
    "url": "https://github.com/xxhomey19/nba-bar/issues"
  },
  "version": "1.2.3",
  "main": "main.js",
  "scripts": {
    "build": "next build renderer && next export renderer",
    "dev": "npm run start",
    "dist": "npm run build && rimraf release && build --mac --win",
    "postinstall": "electron-builder install-app-deps",
    "lint": "eslint renderer",
    "lint:css": "stylelint 'renderer/**/*.js'",
    "lint:fix": "npm run lint -- --fix",
    "pack": "npm run build && build --dir",
    "start": "electron .",
    "test": "npm run testonly",
    "testonly": "cross-env NODE_ENV=test jest",
    "testonly:cov": "cross-env NODE_ENV=test jest --coverage --runInBand --forceExit",
    "testonly:watch": "cross-env NODE_ENV=test jest --watch"
  },
  "dependencies": {
    "@zeit/next-css": "^1.0.1",
    "antd-mobile": "^2.2.8",
    "app-root-path": "^2.1.0",
    "cross-env": "^5.2.0",
    "date-fns": "^1.30.1",
    "electron-debug": "^2.0.0",
    "electron-devtools-installer": "^2.2.3",
    "electron-is-dev": "^1.0.1",
    "electron-next": "^3.1.5",
    "electron-updater": "^4.0.6",
    "is-online": "^8.0.0",
    "luxon": "^1.9.0",
    "menubar": "^5.2.3",
    "nba": "^4.5.0",
    "nba-color": "^1.3.9",
    "nba-stats-client": "^1.0.0",
    "nba.js": "^0.6.1",
    "next": "^7.0.2",
    "next-images": "^1.0.4",
    "next-redux-wrapper": "^2.1.0",
    "prop-types": "^15.6.2",
    "ramda": "^0.26.1",
    "react": "^16.7.0-alpha.2",
    "react-dom": "^16.7.0-alpha.2",
    "react-md-spinner": "^0.3.0",
    "react-redux": "^6.0.0",
    "react-sticky-table": "^4.1.0",
    "react-virtualized": "^9.21.0",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0",
    "styled-components": "^4.1.3"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/plugin-syntax-import-meta": "^7.2.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babel-plugin-import": "^1.11.0",
    "babel-plugin-module-resolver": "^3.1.1",
    "babel-plugin-ramda": "^2.0.0",
    "babel-plugin-styled-components": "^1.10.0",
    "babel-plugin-transform-imports": "^1.5.1",
    "electron": "^4.0.1",
    "electron-builder": "^20.38.4",
    "eslint": "^5.12.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-import-resolver-babel-module": "^5.0.0-beta.1",
    "eslint-import-resolver-webpack": "^0.10.1",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.3",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "node-noop": "^1.0.0",
    "prettier": "^1.15.3",
    "prettier-package-json": "^2.0.1",
    "react-test-renderer": "^16.7.0",
    "redux-logger": "^3.0.6",
    "require-hacker": "^3.0.1",
    "rimraf": "^2.6.3",
    "stylelint": "9.9.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-config-yoctol": "^1.1.1",
    "stylelint-processor-styled-components": "^1.5.1",
    "svg-sprite-loader": "^4.1.3"
  },
  "keywords": [
    "App",
    "Bar",
    "Electron",
    "Menubar",
    "NBA"
  ],
  "engines": {
    "node": ">= 6",
    "npm": ">= 3"
  },
  "build": {
    "appId": "com.nba.bar",
    "productName": "NBA Bar",
    "directories": {
      "buildResources": "resources",
      "output": "release"
    },
    "files": [
      "renderer/out",
      "resources/",
      "main.js"
    ],
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "publish": {
      "provider": "github",
      "repo": "nba-bar",
      "owner": "xxhomey19"
    },
    "mac": {
      "category": "public.app-category.sports",
      "icon": "resources/icon.png",
      "artifactName": "nba-bar-${version}-mac.${ext}"
    },
    "win": {
      "icon": "resources/icon.png",
      "artifactName": "nba-bar-${version}-win.${ext}"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "globals": {
      "window": true
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/.next/"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less)$": "<rootDir>/__mocks__/styleMock.js"
    }
  },
  "lint-staged": {
    "package.json": [
      "prettier-package-json --write",
      "git add"
    ],
    "*.js": [
      "eslint --fix",
      "npm run lint:css",
      "git add"
    ]
  },
  "productName": "NBA Bar"
}
